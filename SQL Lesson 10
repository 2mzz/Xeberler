//Question 2
SELECT Role, AVG(years_employed)FROM employees GROUP BY role

//Question 3
SELECT Building, SUM(Years_employed) 
FROM Employees GROUP BY Building;

//Question 4
SELECT Building,COUNT(*) 
FROM Employees 
WHERE Building GROUP BY Building;

